{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "module": "amd",
        "noImplicitAny": false,
        "outDir": "./dist/",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es6",
        "moduleResolution": "node",
        "strict": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "downlevelIteration": true
    },
    "include": [
        "./src/components/*",
        "./src/reducers/*",
    ],
    "exclude": [
        "node_modules"
    ]
}
